<div class="form-group">
  
  <label for="title"> Name of Component </label>
  <input required value="<%= datasheet.title %>" type="text" name="title" id="title" class="form-control">

  <label for="author"> Vendor of Component</label>
  <input required value="<%= datasheet.author %>" type="text" name="author" id="author" class="form-control">

  <label for="description"> Description of component </label>
  <textarea name="description" id="description" class="form-control">
    <%= datasheet.description %>
  </textarea>
  
  <label for="markdown"> Link of datasheet </label>
  <textarea required name="markdown" id="markdown" class="form-control">
    <%= datasheet.markdown %>
  </textarea>

</div>

<button type="submit" class="btn btn-primary">Save</button>
<a href="/datasheet" class="btn btn-secondary">Cancel</a>