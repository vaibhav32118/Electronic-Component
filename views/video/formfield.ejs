<div class="form-group">
  
  <label for="title"> Title of Video </label>
  <input required value="<%= video.title %>" type="text" name="title" id="title" class="form-control">

  <label for="author"> Author of Video  </label>
  <input required value="<%= video.author %>" type="text" name="author" id="author" class="form-control">

  <label for="description"> Description of Video </label>
  <textarea name="description" id="description" class="form-control">
    <%= video.description %>
  </textarea>
  
  <label for="markdown"> Video Link </label>
  <textarea required name="markdown" id="markdown" class="form-control">
    <%= video.markdown %>
  </textarea>

</div>

<button type="submit" class="btn btn-primary">Save</button>
<a href="/video" class="btn btn-econdary">Cancel</a>