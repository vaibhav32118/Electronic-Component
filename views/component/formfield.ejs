<div class="form-group">

  <label for="title"> Component or Device Name</label>
  <input required value="<%= component.title %>" type="text" name="title" id="title" class="form-control">

  <label for="author"> Component or Device Price</label>
  <input required value="<%= component.author %>" type="text" name="author" id="author" class="form-control">

  <label for="description"> Description of component or device</label>
  <textarea name="description" id="description" class="form-control">
    <%= component.description %>
  </textarea>
  <label for="markdown"> Image Link </label>
  <textarea required name="markdown" id="markdown" class="form-control">
    <%= component.markdown %>
  </textarea>

</div>
<button type="submit" class="btn btn-primary">Save</button>
<a href="/component" class="btn btn-secondary">Cancel</a>