</head>
<body>
    <!-- Navbar -->
<div class="w3-top">
    <div class="w3-bar w3-red w3-card w3-left-align w3-large">
      <a class="w3-bar-item w3-button w3-hide-medium w3-hide-large w3-right w3-padding-large w3-hover-white w3-large w3-red" href="javascript:void(0);" onclick="myFunction()" title="Toggle Navigation Menu"><i class="fa fa-bars"></i></a>
      <a href="#" class="w3-bar-item w3-button w3-padding-large w3-white">Home</a>
      <a href="#" class="w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white">About Us</a>
      <a href="component/" class="w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white">Symbols</a>
      <a href="project/" class="w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white">Project</a>
      <a href="datasheet/" class="w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white">DataSheet</a>
      <a href="video/" class="w3-bar-item w3-button w3-hide-small w3-padding-large w3-hover-white">Videos</a>
    </div>
  
    <!-- Navbar on small screens -->
    <div id="navDemo" class="w3-bar-block w3-white w3-hide w3-hide-large w3-hide-medium w3-large">
      <a href="#" class="w3-bar-item w3-button w3-padding-large">About Us</a>
      <a href="component/" class="w3-bar-item w3-button w3-padding-large">Symbols</a>
      <a href="project/" class="w3-bar-item w3-button w3-padding-large">Project</a>
      <a href="datasheet/" class="w3-bar-item w3-button w3-padding-large">DataSheet</a>
      <a href="video/" class="w3-bar-item w3-button w3-padding-large">Videos</a>
    </div>
  </div>
  
  
    <br><br><br>
    <div class ="container" style="text-align:center;">
        <h1 class="mb-4" > Component Symbol </h1>
        <a href="/component/new" class="btn btn-danger">Add New Component Symbol</a>
        <a href="/" class="btn btn-success">Return to Home Page</a>
    </div>
    <div class="container py-5">  
        <div class="row">
            <div class="col-lg-7 mx-auto">
                <ul >
                    <% component.forEach(component => { %>
                        <div class="container bg-light rounded ml-3 p-4 shadow border-info">
                            <h2 ><%= component.title %></h2>
                            <img src=<%= component.markdown %> height="100" width="100" 
                            style="border: 5px solid #555; border-radius: 4px;">
                            <br>
                            <!-- <h6>  :- <%= component.author %> </h6> -->
                            <!-- <h6> Date :- <%= component.createdAt.toLocaleDateString() %></h6> -->
                            <p class="text-small mt-2 font-weight-light">Description :- <%= component.description %></p>
                            <a href="/component/<%= component.slug %>" class="btn btn-outline-primary">Read More</a>
                            <a href="/component/edit/<%= component.id %>" class="btn btn-outline-info">Edit</a>
                            <form action="/component/<%= component.id %>?_method=DELETE" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>
                        </div>
                        <br>
                    <%  })%>
                </ul>
            </div>
        </div> 
    </div>
</body>
</html>